<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/app_color"
    android:padding="16dp">

    <ImageView
        android:id="@+id/profileImageView"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/baseline_account_circle_24"
        android:contentDescription="Profile Picture"
        android:layout_gravity="center"
        app:tint="@color/button_color" />

    <!-- LinearLayout horizontal pour nom et prénom -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/textViewNomUtilisateur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginEnd="8dp"/> <!-- Marge entre le nom et le prénom -->

        <TextView
            android:id="@+id/textViewPrenomUtilisateur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:fontFamily="@font/roboto_regular"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textViewEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:layout_gravity="center"
        android:fontFamily="@font/ariel_ce"/>
</LinearLayout>
